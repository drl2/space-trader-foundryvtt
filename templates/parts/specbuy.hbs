<div class="space-trader-specbuy-page">
    <div class="space-trader-twelvept-text">
        <label style="font-weight: bold;">{{localize "SPACE-TRADER.SPECTRADEROLLS.FindSupplier"}}:</label><br />
        <label>{{localize "SPACE-TRADER.SPECTRADEROLLS.FindSupplierRoll"}}</label><br />
        <br />
        <label style="font-weight: bold;">{{localize "SPACE-TRADER.SPECTRADEROLLS.FindBlackMarket"}}:</label><br />
        <label>{{localize "SPACE-TRADER.SPECTRADEROLLS.FindBlackMarketRoll"}}</label><br />
        <br />
        <label style="font-weight: bold;">{{localize "SPACE-TRADER.SPECTRADEROLLS.FindOnlineSupplier"}}:</label><br />
        <label>{{localize "SPACE-TRADER.SPECTRADEROLLS.FindOnlineSupplierRoll"}}</label><br />
        <br />
        <label style="font-weight: bold;">{{localize "SPACE-TRADER.PreviousTryPenalty"}}</label><br />
        <br />
        <label style="font-weight: bold;">{{starportDM}}</label>
    </div>
    <div>
        <div class="space-trader-spec-buttondiv">
            <div class="space-trader-lower-text">
                <label class="space-trader-lower-text">{{localize "SPACE-TRADER.Legality"}}:</label>
                <select name="specBuy.isLegal" value="specBuy.isLegal">
                    {{#select specBuy.isLegal}}
                    <option value="true">{{localize 'SPACE-TRADER.Legal'}}</option>
                    <option value="false">{{localize 'SPACE-TRADER.Illegal'}}</option>
                    {{/select}}
                </select>
            </div>
            <div>
                <button class="specbuy-get-button space-trader-get-button"
                    title="{{localize 'SPACE-TRADER.FindSpecCargo'}}">
                    {{localize 'SPACE-TRADER.FindSpecCargo'}}</button>
            </div>
        </div>

        <div class="space-trader-specbuy-list">
            <div class="space-trader-specbuy-detail">
                <div>&nbsp;</div>
                <div class="space-trader-column-header">{{localize 'SPACE-TRADER.Type'}}</div>
                <div class="space-trader-column-header">{{localize 'SPACE-TRADER.Tons'}}</div>
                <div class="space-trader-column-header">{{localize 'SPACE-TRADER.BasePriceCr'}}</div>
                <div class="space-trader-column-header">{{localize 'SPACE-TRADER.BuyPriceCr'}}</div>
                <div class="space-trader-column-header">{{localize 'SPACE-TRADER.Legal'}}</div>


                <div>
                    <a class="item-control buy" data-rolltype="buy" title="{{localize 'SPACE-TRADER.Buy'}}">
                        <i class="fas fa-dollar-sign"></i>
                    </a>
                </div>
                <div>Buy button on each line</div>
                <div>3</div>
                <div>4</div>
                <div>5</div>
                <div>Yes</div>


            </div>



        </div>






    </div>
</div>